<Window x:Class="ExcelDataTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExcelDataTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="650" Width="400">
    <Grid>
        <Button x:Name="NewRecord" Content="New" Width="70" Height="25" VerticalAlignment="Top" HorizontalAlignment="Center" Click="NewRecord_Click"/>
        <TextBox x:Name="Text1"  Text="" Foreground="White" Background="Black" Width="300" Height="75" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="46,65,46,479"/>
        <TextBox x:Name="Text2"  Text="" Foreground="White" Background="Black" Width="300" Height="76" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="46,154,46,389"/>
        <DataGrid x:Name="Data1" IsReadOnly="False" Foreground="LimeGreen" Background="Black"  Width="300" Height="300" HorizontalAlignment="Center" VerticalAlignment="bottom">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Name" Binding="{Binding noteName}" Width="*"/>
                <DataGridTextColumn Header="Content" Binding="{Binding noteText}" Width="2*"/>
            </DataGrid.Columns>

        </DataGrid>




    </Grid>
</Window>
