<Window x:Class="FileReadTest.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileReadTest"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <TextBox x:Name="New_Item" Grid.Row="0" Height="25" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" />
        <Button x:Name="Button" Grid.Row="0" Height="25" Width="75" Content="new" Click="Button_Click" VerticalAlignment="Bottom"  HorizontalAlignment="Left" Margin="50,0,0,0"/>
        <Button x:Name="Button2" Grid.Row="0" Height="25" Width="75" Content="write" Click="Button2_Click"  VerticalAlignment="Bottom"  HorizontalAlignment="Right" Margin="0,0,50,0"/>

        <ListBox x:Name="ListBox" Grid.Row="1" Background="#eee" Height="200" Width="300" Margin="0,0,0,0" />



    </Grid>
</Window>
